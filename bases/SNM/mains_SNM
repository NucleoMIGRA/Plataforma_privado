		graph export "${figure}\agregado.png", as(png) name("Graph") replace

*************************SDA PARTE FIGURAS**********

*SE CREARAN FIGURAS QUE MUESTRAN PORCENTAJE DE MIGRANTES POR ORIGEN.
set scheme modern

import delimited "D:\plataforma_migra\base_snm\base-2022-regiones.csv", clear

collapse (sum) rraa_irregular rraa_regular, by(pais)

egen total_irregulares = total(rraa_irregular)

gen porcentaje_irregulares= rraa_irregular/total_irregulares


gen otros=pais

replace otros="Otros" if porcentaje_irregulares<0.05

gr pie porcentaje_irregulares, over(otros) plabel(1 "Venezuela" name, size(*1) color(black))  ///
b1title("Año 2022") ///
 title("Porcentaje de Irregulares por Nacionalidad") /// 
 legend(off) note("Fuente: Servicio Nacional de Migraciones")
